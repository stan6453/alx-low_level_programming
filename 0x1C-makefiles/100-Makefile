
CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c,%.o, $(SRC))
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(NAME) *# *~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

.PHONY: all clean oclean fclean re


